@model My_Project_CodeFirst.Models.TableRegister
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <center>
            
            <table align="center" height="500px" width="400px">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                {
                    <tr>
                        <td colspan="2" align="center"><h1>Registration form</h1></td>

                    </tr>
                    <tr>
                        <td>Id</td>
                        <td>@Html.TextBoxFor(x=>x.Id)</td>
                    </tr>
                    <tr>
                        <td>FirstName</td>
                        <td>@Html.TextBoxFor(x => x.FirstName)</td>
                    </tr>
                    <tr>
                        <td>LastName</td>
                        <td>@Html.TextBoxFor(x => x.LastName)</td>
                    </tr>
                    <tr>
                        <td>Age</td>
                        <td>@Html.TextBoxFor(x => x.Age)</td>
                    </tr>
                    <tr>
                        <td>Salary</td>
                        <td>@Html.TextBoxFor(x => x.Salary)</td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <input type="submit" value=" Register" />
                        </td>
                    </tr>

                }
            </table>
        </center>
    </div>
</body>
</html>
